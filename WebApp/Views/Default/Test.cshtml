<script>
    $(".touch").mousedown(function () {
        var idx = 0;
        var array = ["red", "yellow", "green", "cyan", "pink", "blue", "gold", "yellowgreen"];
        var fromPos = $("#hdnFrom").text();

        // Color設定判定
        if ($("#hdnColor").text() != "") {
            var idx = Number($("#hdnColor").text()) + 1;
        }

        // Color配列の最大値判定
        if (array.length < (idx + 1)) {
            idx = 0;
        }

        if (fromPos != "") {
            // To取得
            toPos = Number($('[id=' + $(this).attr("id") + ']').text());
            fromPos = Number(fromPos);

            // From-Toの逆転判定
            if (toPos < fromPos) {
                var tmp = fromPos;
                fromPos = toPos;
                toPos = tmp;
            }

            // From~Toの範囲でスタイル設定
            for (var i = (fromPos); i <= toPos ; i++) {
                $('[id=' + $(".touch").attr("id").substring(0, 5) + i + ']').css("background-color", array[idx]);
            }

            // 初期化
            $("#hdnFrom").text("");
            fromPos = "";
            toPos = "";

            // Color用Hiddenへ設定
            $("#hdnColor").text(idx);
        }
        else {
            // From取得
            fromPos = $('[id=' + $(this).attr("id") + ']').text();
            // スタイル追加
            $('[id=' + $(this).attr("id") + ']').css("background-color", array[idx]);
            // From用Hiddenへ設定
            $("#hdnFrom").text(fromPos);
         }
    });
</script>